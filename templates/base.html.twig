        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg" style="background-color:rgb(141, 194, 247);">
            <div class="container">
                <a class="navbar-brand text-dark" href="{{ path('app_dollar_rates') }}">Variación del Dólar</a>
            </div>
        </nav>
        <main class="container">
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
